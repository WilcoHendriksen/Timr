<Window x:Class="timr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:timr"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="White"
        ResizeMode="CanResizeWithGrip" 
        MouseLeftButtonDown="DragMove"
        Title="MainWindow" 
        Height="74" 
        Width="217" 
        KeyUp="timr_KeyUp" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label VerticalAlignment="Center" Grid.Column="1" x:Name="TimerLabel" HorizontalAlignment="Center"/>
    </Grid>
</Window>
